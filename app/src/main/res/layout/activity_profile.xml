<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 tools:context="im.fdx.v2ex.ui.node.NodeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/app_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@id/toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="40dp"
            android:text="username"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/primary"
            app:layout_constraintLeft_toRightOf="@+id/iv_avatar_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar_profile"
            android:layout_marginTop="0dp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_avatar_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:cropToPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person_black_48dp"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_username_profile"
            android:layout_alignStart="@+id/tv_username_profile"
            android:layout_below="@+id/iv_avatar_profile"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="16dp"
            android:text="location"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="@+id/tv_github"
            app:layout_constraintTop_toBottomOf="@+id/tv_github"/>

        <TextView
            android:id="@+id/tv_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Created"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.562"
            app:layout_constraintLeft_toRightOf="@+id/textView"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:hint="introduction"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar_profile"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"/>

        <TextView
            android:id="@+id/tv_github"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/ic_github"
            android:drawablePadding="16dp"
            android:hint="github-id"
            android:onClick="openGithub"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_intro"/>

        <TextView
            android:id="@+id/tv_bitcoin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_created"
            android:layout_alignRight="@+id/tv_created"
            android:layout_below="@+id/tv_github"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_bitcoin"
            android:drawablePadding="16dp"
            android:hint="bitcoin"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintLeft_toLeftOf="@+id/tv_twitter"
            app:layout_constraintRight_toRightOf="@+id/tv_github"
            app:layout_constraintTop_toBottomOf="@+id/tv_twitter"
            tools:layout_constraintLeft_creator="1"
            />

        <TextView
            android:id="@+id/tv_twitter"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/tv_username_profile"
            android:layout_alignRight="@+id/tv_username_profile"
            android:layout_below="@+id/tv_bitcoin"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_twitter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:onClick="openTwitter"
            android:hint="twitter-id"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="@+id/tv_github"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:hint="user Id "
            app:layout_constraintBottom_toBottomOf="@+id/tv_username_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_username_profile"
            app:layout_constraintVertical_bias="0.8"/>

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_website"
            android:drawablePadding="16dp"
            android:hint="website"
            android:onClick="openWeb"
            app:layout_constraintLeft_toLeftOf="@+id/tv_bitcoin"
            app:layout_constraintRight_toRightOf="@+id/tv_github"
            app:layout_constraintTop_toBottomOf="@+id/tv_bitcoin"
            tools:layout_constraintLeft_creator="1"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/created_on"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_username_profile"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_profile"
            android:layout_marginBottom="-1dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_username_profile"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>