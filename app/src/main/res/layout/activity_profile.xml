<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="im.fdx.v2ex.ui.ProfileActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_username"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_marginStart="40dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_person_black_48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView2"
            android:cropToPadding="false"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:text="location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_location"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/tv_username"
            android:layout_alignStart="@+id/tv_username"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.06"/>

        <TextView
            android:text="join time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_created"
            android:layout_marginStart="104dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_id"
            android:layout_marginLeft="104dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_id"/>

        <TextView
            android:text="introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_intro"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintLeft_toLeftOf="@+id/tv_username"/>

        <TextView
            android:text="twitter-id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView7"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_id"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>

        <TextView
            android:text="bitcoin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bitcoin"
            android:layout_below="@+id/textView7"
            android:layout_alignRight="@+id/tv_created"
            android:layout_alignEnd="@+id/tv_created"
            app:layout_constraintLeft_toLeftOf="@+id/tv_twiiter_"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_twiiter_"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.06"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:drawableLeft="@drawable/ic_bitcoin"/>

        <TextView
            android:text="twitter-id"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:id="@+id/tv_twiiter_"
            android:layout_below="@+id/tv_bitcoin"
            android:layout_alignRight="@+id/tv_username"
            android:layout_alignEnd="@+id/tv_username"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_location"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/ic_twitter"
            android:drawablePadding="16dp"
            app:layout_constraintHorizontal_bias="0.06"/>

        <TextView
            android:text="n-th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_id"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="16dp"/>

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
