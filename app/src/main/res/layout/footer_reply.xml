<?xml version="1.0" encoding="utf-8"?>
<!--deprecated-->
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/activity_details_content">


    <include
        layout="@layout/divider"
        android:layout_height="1px"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/foot_container">

        <EditText
            android:layout_weight="1"
            android:id="@+id/et_post_reply"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:minLines="1"
            android:maxLines="5"
            android:paddingStart="@dimen/md_left_margin"
            android:paddingEnd="@dimen/md_left_margin"
            android:textColorHint="#ba7e7e7e"
            android:hint="@string/post_reply"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textAllCaps="false"
            />

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:layout_margin="6dp"
            android:onClick="postReply"
            android:src="@drawable/ic_send_unable"
            android:contentDescription="@string/reply"/>

    </LinearLayout>


</merge>