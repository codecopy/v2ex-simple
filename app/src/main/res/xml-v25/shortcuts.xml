    <shortcut
        android:enabled="true"
        android:shortcutId="show_settings"
        android:icon="@mipmap/ic_settings"
        android:shortcutShortLabel="@string/settings"
        android:shortcutLongLabel="@string/settings">

        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="im.fdx.v2ex"
            android:targetClass="im.fdx.v2ex.ui.SettingsActivity" />

        <!--如果你的一个shortcut关联着多个intent，你可以在这里继续添
            加。最后一个intent决定着用户在加载这个shortcut时会看到什么-->

        <categories android:name="android.shortcut.conversation" />

    </shortcut>


